<Window x:Class="Example14Wpf.VisualWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Wpf"
        mc:Ignorable="d"
        Title="Visual Brush" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Rectangle Height="176" Stroke="Black" Width="452" Canvas.Left="174" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Rectangle.Fill>
                <VisualBrush>
                    <VisualBrush.Visual>
                        <TextBlock Text="Hello World" Foreground="Red" FontSize="30"/>
                    </VisualBrush.Visual>
                </VisualBrush>
            </Rectangle.Fill>

        </Rectangle>
    </Canvas>
</Window>
