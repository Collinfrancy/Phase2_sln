<Window x:Class="Example14Wpf.ImageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Wpf"
        mc:Ignorable="d"
        Title="Image Brush" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Rectangle Height="261" Stroke="Black" Width="468" Canvas.Left="166" Canvas.Top="73" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.5">
            <Rectangle.Fill>
                <ImageBrush ImageSource="/Duck.jpg" Stretch="Fill" TileMode="FlipXY"  />
            </Rectangle.Fill>

        </Rectangle>
    </Canvas>
</Window>
