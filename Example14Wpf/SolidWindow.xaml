<Window x:Class="Example14Wpf.SolidWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Example14Wpf"
        mc:Ignorable="d"
        Title="Solid Brush" Height="450" Width="800" Closing="Window_Closing">
    <Canvas>
        <Rectangle Height="100" Stroke="Black" Width="218" Canvas.Left="241" Canvas.Top="146" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Rectangle.Fill>
                <SolidColorBrush Color="Aqua"></SolidColorBrush>
            </Rectangle.Fill>

        </Rectangle>
        <Ellipse Height="216" Canvas.Left="520" Stroke="Black" Canvas.Top="88" Width="184" HorizontalAlignment="Left" VerticalAlignment="Center">
            <Ellipse.Fill>
                <SolidColorBrush Color="Red"></SolidColorBrush>
            </Ellipse.Fill>
        </Ellipse>

    </Canvas>
</Window>
